@model IEnumerable<Medi_Clinic.Models.Schedule>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<h1>Details</h1>

@foreach (var item in Model)
{
    <div>
        <h4>Schedule</h4>
        <hr />

        <dl class="row">

            <dt class="col-sm-2">Schedule Date</dt>
            <dd class="col-sm-10">@item.ScheduleDate</dd>

            <dt class="col-sm-2">Schedule Time</dt>
            <dd class="col-sm-10">@item.ScheduleTime</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@item.ScheduleStatus</dd>

            <dt class="col-sm-2">Appointment ID</dt>
            <dd class="col-sm-10">@item.Appointment.AppointmentId</dd>

            <dt class="col-sm-2">Doctor</dt>
            <dd class="col-sm-10">@item.Physician.PhysicianName</dd>

        </dl>
    </div>
    <a asp-action="ViewAdvice"
       asp-route-id="@item.AppointmentId"
       class="btn btn-success">
        View Advice
    </a>

    <a asp-action="ViewPrescription"
       asp-route-id="@item.AppointmentId"
       class="btn btn-primary">
        View Prescription
    </a>

    <hr />
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
