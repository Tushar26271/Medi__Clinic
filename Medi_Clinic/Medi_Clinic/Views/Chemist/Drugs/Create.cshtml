@model Medi_Clinic.Models.Drug

@{
    ViewData["Title"] = "Drugs";
    Layout = "~/Views/Shared/_LayoutChemist.cshtml";
}

<h3>Add New Drug</h3>

<form asp-action="CreateDrug" method="post">
    <div class="mb-3">
        <label class="form-label">Drug Title</label>
        <input asp-for="DrugTitle" class="form-control" />
        <span asp-validation-for="DrugTitle" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Dosage</label>
        <input asp-for="Dosage" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Expiry Date</label>
        <input asp-for="Expiry" type="date" class="form-control" />
    </div>

    <button class="btn btn-success">Save</button>
    <a asp-action="Drugs" class="btn btn-secondary">Back</a>
</form>
