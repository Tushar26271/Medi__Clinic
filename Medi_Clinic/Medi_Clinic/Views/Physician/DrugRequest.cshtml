@model Medi_Clinic.Models.DrugRequest

@{
    ViewData["Title"] = "Drug Request";
    Layout = "~/Views/Shared/_PhysicianLayout.cshtml";
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-1">Request New Drug</h4>
                <small class="text-muted">
                    Submit a request to admin for new medicine approval
                </small>
            </div>
            <i class="bi bi-capsule-pill fs-2 text-primary"></i>
        </div>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success rounded-3">
                <i class="bi bi-check-circle me-2"></i>
                @ViewBag.SuccessMessage
            </div>
        }

        <form asp-action="DrugRequest" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="DrugsInfoText" class="form-label fw-semibold">
                    Drug Details
                </label>

                <textarea asp-for="DrugsInfoText"
                          class="form-control rounded-3"
                          rows="4"
                          placeholder="Enter drug name, composition, usage details...">
</textarea>

                <span asp-validation-for="DrugsInfoText"
                      class="text-danger small">
                </span>
            </div>

            <div class="d-flex gap-3 mt-4">
                <button type="submit"
                        class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-send me-2"></i> Submit Request
                </button>

                <a asp-action="Index"
                   class="btn btn-outline-secondary rounded-pill px-4">
                    Cancel
                </a>
            </div>
        </form>

    </div>
</div>