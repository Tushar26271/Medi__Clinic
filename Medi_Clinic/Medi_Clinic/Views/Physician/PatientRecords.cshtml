@model IEnumerable<Medi_Clinic.Models.PhysicianAdvice>

@{
    ViewData["Title"] = "Patient Advice Records";
    Layout = "~/Views/Shared/_PhysicianLayout.cshtml";
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-1">Patient Advice Records</h4>
                <small class="text-muted">
                    View consultation advice and PhysicianPrescrips
                </small>
            </div>
            <i class="bi bi-journal-medical fs-2 text-primary"></i>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table align-middle table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Physician</th>
                            <th>Advice</th>
                            <th>PhysicianPrescrips</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <!-- Date -->
                                <td>
                                    <span class="badge bg-primary">
                                        @item.Schedule?.ScheduleDate
                                    </span>
                                </td>

                                <!-- Physician -->
                                <td class="fw-semibold">
                                    @item.Schedule?.Physician?.PhysicianName
                                </td>

                                <!-- Advice -->
                                <td>
                                    @item.Advice
                                </td>

                                <!-- PhysicianPrescrips -->
                                <td>
                                    @if (item.PhysicianPrescrips != null && item.PhysicianPrescrips.Any())
                                    {
                                        <ul class="list-group list-group-flush">
                                            @foreach (var p in item.PhysicianPrescrips)
                                            {
                                                <li class="list-group-item px-2 py-1">
                                                    <strong>@p.Drug?.DrugTitle</strong>
                                                    <br />
                                                    <small class="text-muted">
                                                        @p.Prescription | Dosage: @p.Dosage
                                                    </small>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No prescription</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info rounded-3">
                <i class="bi bi-info-circle me-2"></i>
                No advice records found.
            </div>
        }

    </div>
</div>