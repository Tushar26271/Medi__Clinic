@model IEnumerable<Medi_Clinic.Models.Schedule>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_PhysicianLayout.cshtml";

    var doctorName = ViewBag.DoctorName as string ?? "Doctor";
    var todayCount = ViewBag.TotalToday ?? 0;
}

<!-- Welcome Section -->
<div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
    <h3 class="fw-bold">
        Welcome Back, @doctorName 👨‍⚕️
    </h3>
    <p class="text-muted mb-0">
        Manage schedules, patient records & prescriptions
    </p>
</div>

<!-- Stats -->
<div class="row g-4 mb-4">

    <div class="col-md-4">
        <div class="card shadow-sm border-0 rounded-4 p-4 text-center">
            <small class="text-muted">Today's Appointments</small>
            <h2 class="fw-bold text-primary">@todayCount</h2>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 rounded-4 p-4 text-center">
            <small class="text-muted">Upcoming Appointments</small>
            <h2 class="fw-bold text-success">
                @(Model?.Count() ?? 0)
            </h2>
        </div>
    </div>

</div>

<!-- Schedule Table -->
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-header bg-primary text-white">
        My Upcoming Schedule
    </div>

    <div class="card-body">

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">
                No upcoming appointments.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Patient</th>
                            <th>Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>
                                    @s.ScheduleDate
                                </td>

                                <!-- 🔥 SAFE TIME DISPLAY -->
                                <td>
                                    @s.ScheduleTime
                                </td>

                                <td>
                                    @(s.Appointment?.Patient?.PatientName ?? "-")
                                </td>

                                <td>
                                    @if (s.ScheduleStatus == "Completed")
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            @s.ScheduleStatus
                                        </span>
                                    }
                                </td>

                                <td class="text-center">

                                    @if (s.ScheduleStatus != "Completed")
                                    {
                                        <a asp-action="AddAdvice"
                                           asp-route-id="@s.ScheduleId"
                                           class="btn btn-primary btn-sm">
                                            Add Advice
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="ViewAdvice"
                                           asp-route-id="@s.ScheduleId"
                                           class="btn btn-outline-secondary btn-sm">
                                            View
                                        </a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>
</div>