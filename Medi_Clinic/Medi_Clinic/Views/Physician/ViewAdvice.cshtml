@model Medi_Clinic.Models.PhysicianAdvice

@{
    ViewData["Title"] = "Patient Advice Details";
    Layout = "~/Views/Shared/_PhysicianLayout.cshtml";
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-1">Patient Advice Details</h4>
                <small class="text-muted">
                    Consultation summary and PhysicianPrescrips
                </small>
            </div>
            <i class="bi bi-file-medical fs-2 text-primary"></i>
        </div>

        <!-- Patient Information -->
        <div class="card bg-light border-0 rounded-4 mb-4">
            <div class="card-body">

                <h6 class="fw-bold mb-3">Patient Information</h6>

                <div class="row">
                    <div class="col-md-6 mb-2">
                        <strong>Name:</strong>
                        @Model.Schedule?.Appointment?.Patient?.PatientName
                    </div>

                    <div class="col-md-6 mb-2">
                        <strong>Gender:</strong>
                        @Model.Schedule?.Appointment?.Patient?.Gender
                    </div>

                    <div class="col-md-6 mb-2">
                        <strong>Date of Birth:</strong>
                        @(Model.Schedule?.Appointment?.Patient?.Dob?.ToString("dd MMM yyyy") ?? "-")
                    </div>

                    <div class="col-md-6 mb-2">
                        <strong>Consultation Date:</strong>
                        <span class="badge bg-primary">
                            @Model.Schedule?.ScheduleDate
                        </span>
                    </div>
                </div>

            </div>
        </div>

        <!-- Advice Section -->
        <div class="card border-0 rounded-4 mb-4 shadow-sm">
            <div class="card-body">
                <h6 class="fw-bold mb-3">Physician Advice</h6>

                <div class="p-3 bg-light rounded-3">
                    @Model.Advice
                </div>

                @if (!string.IsNullOrEmpty(Model.Note))
                {
                    <div class="mt-3">
                        <strong>Additional Note:</strong>
                        <div class="p-3 bg-warning bg-opacity-10 rounded-3 mt-2">
                            @Model.Note
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Prescription Section -->
        <div class="card border-0 rounded-4 shadow-sm">
            <div class="card-body">

                <h6 class="fw-bold mb-3">PhysicianPrescrips</h6>

                @if (Model.PhysicianPrescrips != null && Model.PhysicianPrescrips.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Drug</th>
                                    <th>Prescription</th>
                                    <th>Dosage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model.PhysicianPrescrips)
                                {
                                    <tr>
                                        <td class="fw-semibold">
                                            @p.Drug?.DrugTitle
                                        </td>
                                        <td>@p.Prescription</td>
                                        <td>
                                            <span class="badge bg-success">
                                                @p.Dosage
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info rounded-3">
                        No PhysicianPrescrips added.
                    </div>
                }

            </div>
        </div>

        <!-- Back Button -->
        <div class="mt-4">
            <a asp-action="ViewSchedule"
               class="btn btn-outline-primary rounded-pill px-4">
                <i class="bi bi-arrow-left"></i> Back to Schedule
            </a>
        </div>

    </div>
</div>