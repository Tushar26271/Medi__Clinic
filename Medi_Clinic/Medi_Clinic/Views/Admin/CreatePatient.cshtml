@model Medi_Clinic.Models.Patient

@{
    ViewData["Title"] = "Create Patient";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
    }

    .admin-form-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
    }

    .admin-form-card {
        width: 100%;
        max-width: 650px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        padding: 35px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.25);
        color: white;
        animation: fadeIn 0.6s ease-in-out;
    }

    .form-title {
        font-weight: 600;
        margin-bottom: 25px;
        letter-spacing: 1px;
    }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 500;
        margin-bottom: 6px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px;
        border: none;
        outline: none;
        transition: 0.3s;
    }

        .form-control:focus {
            box-shadow: 0 0 10px #00c6ff;
            transform: scale(1.02);
        }

    /* Custom Radio Buttons */
    .gender-group {
        display: flex;
        gap: 20px;
        margin-top: 5px;
    }

    .gender-option {
        background: rgba(255,255,255,0.2);
        padding: 8px 15px;
        border-radius: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .gender-option input {
            margin-right: 5px;
        }

        .gender-option:hover {
            background: #00c6ff;
            transform: scale(1.05);
        }

    .text-danger {
        font-size: 13px;
    }

    .form-actions-fix {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn-primary {
        background: #00c6ff;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: #0072ff;
            transform: scale(1.05);
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: scale(1.05);
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

   
</style>

<div class="admin-form-wrapper">
    <div class="admin-form-card">
        <h4 class="form-title text-center">👤 Create Patient</h4>

        <form asp-action="CreatePatient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PatientName"></label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dob"></label>
                <input asp-for="Dob" type="date" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Gender</label>
                <div class="gender-group">
                    <label class="gender-option">
                        <input type="radio" asp-for="Gender" value="Male" /> Male
                    </label>
                    <label class="gender-option">
                        <input type="radio" asp-for="Gender" value="Female" /> Female
                    </label>
                    <label class="gender-option">
                        <input type="radio" asp-for="Gender" value="Other" /> Other
                    </label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Summary"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
