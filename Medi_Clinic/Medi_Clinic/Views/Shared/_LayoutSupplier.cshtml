<!DOCTYPE html>
<html>
<head>
    <title>Supplier Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Supplier" asp-action="Index">
                Supplier Dashboard
            </a>

            <div>
                <a class="btn btn-outline-light me-2" asp-action="Index">Home</a>
                <a class="btn btn-outline-light me-2" asp-action="PurchaseOrders">Purchase Orders</a>
                <a class="btn btn-outline-light me-2" asp-action="Profile">Profile</a>
                <a class="btn btn-outline-light me-2" asp-action="ResetPassword">Reset Password</a>
                <a class="btn btn-outline-light me-2" asp-controller="Credimgr" asp-action="Login">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
