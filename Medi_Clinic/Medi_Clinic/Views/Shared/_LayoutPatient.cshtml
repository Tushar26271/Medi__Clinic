<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medi_Clinic</title>

    <script type="importmap"></script>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Existing CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Medi_Clinic.styles.css" asp-append-version="true" />

    <!-- ⭐ NEW NAVBAR STYLES -->
    <style>
        .custom-navbar {
            background: linear-gradient(90deg, #0d6efd, #20c997);
            padding: 12px 20px;
        }

        .brand-text {
            color: white !important;
            font-size: 22px;
            letter-spacing: 1px;
            font-weight: 600;
        }

        .logout-btn {
            color: white !important;
            border: 2px solid white;
            padding: 6px 18px !important;
            border-radius: 25px;
            transition: 0.3s;
            font-weight: 500;
        }

        .logout-btn:hover {
            background: white;
            color: #0d6efd !important;
        }
    </style>
</head>

<body>

    <header>
        <!-- ⭐ ONLY CLASS ADDED HERE -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 custom-navbar">
            <div class="container-fluid">

                <!-- ⭐ BRAND CLASS ADDED -->
                <a class="navbar-brand brand-text" asp-area="" asp-controller="Home" asp-action="Index">
                    Medi_Clinic
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item ms-auto">
                            <!-- ⭐ LOGOUT CLASS ADDED -->
                            <a class="nav-link logout-btn" asp-controller="Credimgr" asp-action="Login">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Medi_Clinic -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
