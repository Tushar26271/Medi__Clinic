@model Medi_Clinic.Models.Drug

@{
    ViewData["Title"] = "EditDrug";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>EditDrug</h1>

<h4>Drug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDrug">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DrugId" />
            <div class="form-group">
                <label asp-for="DrugTitle" class="control-label"></label>
                <input asp-for="DrugTitle" class="form-control" />
                <span asp-validation-for="DrugTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expiry" class="control-label"></label>
                <input asp-for="Expiry" class="form-control" />
                <span asp-validation-for="Expiry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dosage" class="control-label"></label>
                <input asp-for="Dosage" class="form-control" />
                <span asp-validation-for="Dosage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrugStatus" class="control-label"></label>
                <input asp-for="DrugStatus" class="form-control" />
                <span asp-validation-for="DrugStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetDrug">Back to List</a>
</div>

