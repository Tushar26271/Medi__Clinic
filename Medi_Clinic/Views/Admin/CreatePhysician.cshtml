@model Medi_Clinic.Models.Physician

@{
    ViewData["Title"] = "Create Physician";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
    }

    .admin-form-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
    }

    .admin-form-card {
        width: 100%;
        max-width: 650px;
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        padding: 35px;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
        color: white;
        animation: fadeIn 0.6s ease-in-out;
    }

    .form-title {
        font-weight: 600;
        margin-bottom: 25px;
        letter-spacing: 1px;
    }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 500;
        margin-bottom: 6px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px;
        border: none;
        outline: none;
        transition: 0.3s;
    }

        .form-control:focus {
            box-shadow: 0 0 12px #00c6ff;
            transform: scale(1.02);
        }

    /* Special highlight for Specialization */
    .specialization-input {
        border-left: 4px solid #00c6ff;
    }

    .text-danger {
        font-size: 13px;
    }

    .form-actions-fix {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn-primary {
        background: #00c6ff;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: #0072ff;
            transform: scale(1.05);
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: scale(1.05);
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

  
</style>

