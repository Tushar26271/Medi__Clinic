@model Medi_Clinic.Models.SupplierResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LayoutSupplier.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4>Supplier Reset Password</h4>
                </div>

                <div class="card-body">

                    <form asp-action="ResetPassword" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label"></label>
                            <input asp-for="OldPassword" class="form-control" type="password" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PasswordConfirmation" class="form-label"></label>
                            <input asp-for="PasswordConfirmation" class="form-control" type="password" />
                            <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            Change Password
                        </button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


