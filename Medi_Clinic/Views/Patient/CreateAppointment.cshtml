@model Medi_Clinic.Models.Appointment

@{
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<h3>Book Appointment</h3>

<form asp-action="CreateAppointment" method="post">

    <div class="form-group">
        <label>Date</label>
        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label>Criticality</label>
        <input asp-for="Criticality" class="form-control" />
    </div>

    <div class="form-group">
        <label>Reason</label>
        <input asp-for="Reason" class="form-control" />
    </div>

    <div class="form-group">
        <label>Note</label>
        <input asp-for="Note" class="form-control" />
    </div>

    <br />

    <button type="submit" class="btn btn-success">Book Appointment</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back</a>
