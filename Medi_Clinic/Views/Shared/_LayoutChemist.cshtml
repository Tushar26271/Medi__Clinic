@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <title>Chemist Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index">Chemist Dashboard</a>
            <div>
                <a class="btn btn-light" asp-controller="Chemist" asp-action="Index">Home</a>
                <a class="btn btn-light" asp-action="Profile">Profile</a>
                <a class="btn btn-light" asp-action="Drugs">Drugs</a>
                <a class="btn btn-light" asp-action="DrugRequests">Drug Requests</a>
                <a class="btn btn-light" asp-action="PurchaseOrders">Purchase Orders</a>
                <a class="btn btn-light" asp-action="ResetPassword">Reset Password</a>
                <a class="btn btn-light" asp-controller="Credimgr" asp-action="Login">Logout</a>

            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
