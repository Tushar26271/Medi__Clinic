@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Medi Clinic Lab - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/admin-dashboard.css" rel="stylesheet" />
    <link href="~/css/admin-views.css" rel="stylesheet" />

</head>
<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container-fluid">

            

            <a class="navbar-brand fw-bold text-primary" asp-action="Index">
                <i class="fas fa-clinic-medical"></i> Medi Clinic Lab
            </a>

            <div class="ms-auto d-flex align-items-center">

                <!-- Notification -->
                <div class="dropdown me-3">
                    <a class="nav-link position-relative" data-bs-toggle="dropdown">
                        <i class="fas fa-bell fs-5"></i>
                        <span class="badge bg-danger notification-badge">
                            @ViewBag.PendingPatientsCount
                        </span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li>
                            <a class="dropdown-item" asp-controller="Admin" asp-action="PendPatients">
                                Pending Patients
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="Admin" asp-action="PendingAppointments">
                                Pending Schedules
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Admin Profile -->
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-user-circle"></i> Admin
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li>
                            <a class="dropdown-item text-danger" asp-controller="CrediMgr" asp-action="Logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </nav>
    <div class="layout-wrapper">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar" >
        <ul class="nav flex-column">

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="PatientGetDetails">
                    <i class="fas fa-user-injured"></i> Patients
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="PhysicianGetDetails">
                    <i class="fas fa-user-md"></i> Physicians
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="ChemistGetDetails">
                    <i class="fas fa-capsules"></i> Chemists
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="SupplierGetDetails">
                    <i class="fas fa-truck"></i> Suppliers
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="GetAppointmentDetails">
                    <i class="fas fa-calendar-check"></i> Appointments
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="GetScheduleDetails">
                    <i class="fas fa-clock"></i> Schedules
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-warning" asp-controller="Admin" asp-action="PendPatients">
                    <i class="fas fa-user-clock"></i> Pending Patients
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-danger" asp-controller="Admin" asp-action="PendingAppointments">
                    <i class="fas fa-exclamation-circle"></i> Pending Schedules
                </a>
            </li>

        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    

    <script>
        document.getElementById("sidebarToggle")
            .addEventListener("click", function () {
                document.getElementById("sidebar")
                    .classList.toggle("collapsed");
            });
    </script>


</body>
</html>
